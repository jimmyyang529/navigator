<div class="aboutus clearfix">

    <div id="logo">
          <%= link_to posts_path do %>
             <%= image_tag("logo.png", :width => 50) %>
          <% end %>
    </div>
      <nav >
        <ul class="clearfix">
            <li><%= link_to '合作案例', work_case_posts_path(@posts) %></li>
            <li><%= link_to '服務內容', service_posts_path %></li>
            <li><%= link_to '東南亞商情', articles_path(@articles) %></li>
            <li><%= link_to '關於我們', aboutus_posts_path %></li>
        </ul>
      </nav>
</div>



<ul class="table">
  <h1>東南亞商情</h1>
  <% @articles.each do |article| %>
      <div class="article-title animated infinite fadeInDown">
        <li><%= link_to article_path(article) do %>
              <%= image_tag(article.photo) %>
              <%= article.title %></li>
            <% end %>
      </div>
      <%end%>
</ul>

<div class="aboutus-bg">
  <%= image_tag ("article-bg.jpg")%>
</div>
